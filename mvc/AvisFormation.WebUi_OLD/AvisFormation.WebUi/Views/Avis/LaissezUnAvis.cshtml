
@model int

@*@Html.ValidationSummary();*@


@using (Html.BeginForm("SaveComment", "Avis", FormMethod.Post))
{
    <div>@Html.ValidationMessage("nom")</div>
    <div>
        <label>Nom:</label>
        <input type="text" name="nom" />
    </div>


    <div>@Html.ValidationMessage("commentaire")</div>
    <div>
        <label>Commentaire:</label>
        <textarea name="commentaire" rows="5"></textarea>
    </div>
    <div>
        <select name="note">
            <option>1</option>
            <option>1.5</option>
            <option>2</option>
            <option>2.5</option>
            <option>3</option>
            <option>3.5</option>
            <option>4</option>
            <option>4.5</option>
            <option>5</option>
        </select>
    </div>
    <input type="submit" value="Poster votre avis" />
    <input type="hidden" value="@Model" name="idFormation" />
}
