<Window x:Class="Exo_Contacts.NouveauPays"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Title="Nouveau pays" Height="180" Width="352">
    <DockPanel Margin="8">
        <StackPanel DockPanel.Dock="Bottom" 
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Height="30" Padding="8,0" Margin="8,0" Click="Enregistrer_Click">Enregistrer</Button>
            <Button Height="30" Padding="8,0" Margin="8,0" Click="Annuler_Click">Annuler</Button>
        </StackPanel>

        <StackPanel Margin="8">
            <TextBlock FontWeight="Bold">Nom du pays</TextBlock>
            <TextBox x:Name="tbNomPays" Margin="0,5" Height="25" VerticalContentAlignment="Center"/>
        </StackPanel>
    </DockPanel>
</Window>
