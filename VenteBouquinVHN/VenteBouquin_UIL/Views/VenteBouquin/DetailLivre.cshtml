@model VenteBouquin_UIL.Views.VenteBouquin.LivreViewModel

@{
    ViewBag.Title = "DetailLivre";
    List<string> mesCodeISBN = new List<string>();
}


<h2>DetailLivre</h2>
<link href="~/Style/site.css" rel="stylesheet" />
<div>
    <h4>LivreModel</h4>
    <hr />
    <div>
        <table class="table-bordered table-hover table-striped table-condensed  table-responsive">
            <tr>
                <th>
                    @Html.DisplayName("CodeISBNM")
                </th>
                <th>
                    @Html.DisplayName("NomLivreM")
                </th>
                <th>
                    @Html.DisplayName("AuteurM")
                </th>
                <th>
                    @Html.DisplayName("EditeurM")
                </th>
                <th>
                    @Html.DisplayName("CoverImageM")
                </th>
                <th>
                    @Html.DisplayName("PrixM")
                </th>
            </tr>
            <tr>
                <td>
                    @Html.DisplayFor(model => model.LivreVM.CodeISBNM)
                </td>
                <td>
                    @Html.DisplayFor(model => model.LivreVM.NomLivreM)
                </td>
                <td>
                    @Html.DisplayFor(model => model.LivreVM.AuteurM)
                </td>
                <td>
                    @Html.DisplayFor(model => model.LivreVM.EditeurM)
                </td>
                <td>
                    @Html.DisplayFor(model => model.LivreVM.CoverImageM)
                </td>
                <td>
                    @Html.DisplayFor(model => model.LivreVM.PrixM)
                </td>

            </tr>

        </table>
    </div>

    <div>
        <p class="text-danger">
            Description
        </p>
        <p class="text-success">
            @Html.DisplayFor(model => model.LivreVM.DescriptionM.DetailM)
        </p>
    </div>
</div>
<div class="container text-center padding30">
    <h3 class="jumbotron">@Html.DisplayFor(modelItem => Model.LivreVM.NomLivreM)</h3>
    
    <div class="row ">
        <div class="col-lg-3 col-md-3 col-sm-3">
            <div>
                @Html.DisplayFor(modelItem => Model.LivreVM.CoverImageM)
            </div>
        </div>
        <div class="col-lg-9 col-md-9 ">
            <div class="row">

                <div class="col-lg-6 col-md-6  col-sm-12">
                    @Html.DisplayFor(modelItem => Model.LivreVM.AuteurM)
                </div>
                <div class="col-lg-6 col-md-6  col-sm-12">
                    @Html.DisplayFor(modelItem => Model.LivreVM.EditeurM)
                </div>
                <div class="col-lg-6 col-md-6  col-sm-12">
                    @Html.DisplayFor(modelItem => Model.LivreVM.CodeISBNM)
                </div>
                <div class="col-lg-6 col-md-6  col-sm-12">
                    @Html.DisplayFor(modelItem => Model.LivreVM.PrixM)
                </div>
            </div>
        </div>
        <div class="col-lg-12 col-md-12  col-sm-12">
            @Html.DisplayFor(modelItem => Model.LivreVM.DescriptionM.DetailM)
        </div>
    </div>
</div>

<p>
    <button id="btnAddPanier" class="btn-success" onclick="myFunction(Model.LivreVM.CodeISBNM);">Ajouter au panier</button>|
    @Html.ActionLink("Voir panier", "AddPanier", new { mesCodeISBN = Model.LivreVM.CodeISBNM, codeUtilisateur = User.Identity.Name })|
    @Html.ActionLink("Back to List", "Index")
</p>
<script>
    function myFunction(maChaine) {
        mesCodeISBN.Add(maChaine);
    }
</script>