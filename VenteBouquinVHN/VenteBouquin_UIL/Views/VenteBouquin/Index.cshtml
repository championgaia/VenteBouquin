@model VenteBouquin_UIL.Views.VenteBouquin.LivreCategoryViewModel

@{
    ViewBag.Title = "Index";
}
<link href="~/Style/site.css" rel="stylesheet" />
<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div class="row">
    <div class="col-lg-3 col-sm-6">1</div>
    <div class="col-lg-3 col-sm-6">2</div>
    <div class="col-lg-3 col-sm-6">3</div>
    <div class="col-lg-3 col-sm-6">4</div>
</div>


<table class="table-bordered table-hover table-striped table-condensed table-responsive">
    <tr>
        <th>
            @Html.DisplayName("CodeCategory")
        </th>
        <th>
            @Html.DisplayName("NomCategory")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.LivreCategoryVM)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CodeCategoryM)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NomCategoryM)
            </td>
            <td>
                @Html.ActionLink("GetLivre", "GetLivreParCategory", new { codeCategory = item.CodeCategoryM })
            </td>
        </tr>
    }

</table>