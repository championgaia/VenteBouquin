@model VenteBouquin_UIL.Views.VenteBouquin.ListeLivreViewModel

@{
    ViewBag.Title = "GetLivreParCategory";
}
<link href="~/Style/site.css" rel="stylesheet" />
<h2>GetLivreParCategory</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table-bordered table-hover table-striped table-condensed  table-responsive">
    <tr>
        <th>
            @Html.DisplayName("CodeISBNM")
        </th>
        <th>
            @Html.DisplayName("NomLivreM")
        </th>
        <th>
            @Html.DisplayName("AuteurM")
        </th>                 
        <th>                  
            @Html.DisplayName("EditeurM")
        </th>                 
        <th>                  
            @Html.DisplayName("CoverImageM")
        </th>                 
        <th>                  
            @Html.DisplayName("PrixM")
        </th>                 
        <th></th>
    </tr>

    @foreach (var item in Model.ListeLivreVM)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CodeISBNM)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NomLivreM)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AuteurM)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EditeurM)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CoverImageM)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrixM)
            </td>
            <td>
                @Html.ActionLink("Details", "DetailLivre", new { codeISBN = item.CodeISBNM })|
                @Html.ActionLink("Back to List", "Index")
            </td>
        </tr>
    }

</table>