<Window x:Class="TpBindings.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TpBindings"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--changer la valeur de Height et regarder dans le designer ce qui se passe
        Essayer de Binding la couleur du second rectangle sur la couleur du premier.-->
        
        <Rectangle Height="150" 
                   Stroke="Black"
                   Fill="Red"
                   />

            <Rectangle Grid.Column="1"  Name="rectangle" 
                    Height="100" Stroke="Black" 
                    Canvas.Top="100" Canvas.Left="100"
                    Width="{Binding ElementName=rectangle,
                    Path=Height}"
                    Fill="{Binding ElementName=rectangle,
                    Path=Fill}"/>
    </Grid>

    


</Window>
